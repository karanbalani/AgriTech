<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/farm"
    tools:context=".ConfirmPickupActivity">

    <TextView
        android:id="@+id/tvPickupDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff99"
        android:alpha="0.7"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text=""/>

    <Button
        android:id="@+id/btnCallPickup"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:background=" #ffff99"
        android:alpha="0.7"
        android:text="Call for Pickup \n
पिकअप के लिए कॉल करें " />

    <Button
        android:id="@+id/btnTextPickup"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:background=" #ffff99"
        android:alpha="0.7"
        android:text="SMS for Pickup \n पिकअप के लिए संदेश भेजें" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:background=" #ffff99"
        android:alpha="0.7"
        android:text="Click to Proceed " />

</LinearLayout>