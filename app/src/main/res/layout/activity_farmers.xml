<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:background="@drawable/farm"
    android:layout_width="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".FarmersActivity">


    <TextView
        android:id="@+id/tvFarmerMachine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff99"
        android:alpha="0.7"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text="Select Machine \n
मशीन का चयन करें" /> />

    <Spinner
        android:id="@+id/spnFType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff99"
        android:alpha="0.7"
        android:scrollbarSize="10dp"

        android:layout_marginTop="28dp"
        />

    <TextView
        android:id="@+id/tvFarmerDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff99"
        android:alpha="0.7"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text="Select District \n
जिले का चयन करें" /> />

    <Spinner
        android:id="@+id/spnFDistrict"
        android:background="#ffff99"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp" />

    <Button
        android:id="@+id/btnFarmerGetDetails"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        android:background=" #ffff99"
        android:alpha="0.7"
        android:text="Get Details \n
विवरण प्राप्त करें" />

    <TextView
        android:id="@+id/tvVendorDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff99"
        android:alpha="0.7"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="" /> />




    <Button
    android:id="@+id/btnFarmerText"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:textSize="15dp"
    android:background=" #ffff99"
    android:alpha="0.7"
    android:text="Send Message to Vendor \n
विक्रेता को संदेश भेजें" />

    <Button
        android:id="@+id/btnFarmerCall"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:background=" #ffff99"
        android:alpha="0.7"
        android:text="Call Vendor \n
विक्रेता को फोन करो" />


    <TextView
    android:id="@+id/tvFarmerGetDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff99"
    android:alpha="0.7"
    android:layout_marginTop="70dp"
    android:gravity="center"
    android:textSize="20dp"
    android:textColor="#000000"
    android:text="" /> />


    <Button
        android:onClick="showDialog"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        android:background=" #ffff99"
        android:alpha="0.7"
        android:text="Rate" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:background=" #ffff99"
        android:alpha="0.7"
        />





</LinearLayout>
</ScrollView>